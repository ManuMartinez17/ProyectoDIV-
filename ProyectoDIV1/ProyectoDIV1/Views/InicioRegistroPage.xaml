<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoDIV1.Views.InicioRegistroPage" Title="Registro"
             BackgroundColor="#E08C67"
              Shell.BackgroundColor="{StaticResource Primary}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image x:Name="div3"
                                Grid.Row="0"
				Source="div3.png"/>
            <Button x:Name="Candidato"
						FontFamily="Lato"
						FontAttributes="Bold"
						HorizontalOptions="Center"
					    Clicked="Candidato_Clicked"
						FontSize="14"
						TextColor="White"
                        BackgroundColor="#705E78"
                        CornerRadius="20"
						Text="CANDIDATO"/>

            <Button x:Name="Empresa"
						FontFamily="Lato"
						FontAttributes="Bold"
						HorizontalOptions="Center"
						Clicked="Empresa_Clicked"
						FontSize="14"
                        CornerRadius="20"
						TextColor="White"
                        BackgroundColor="#705E78"
						Text="Empresa" />

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>